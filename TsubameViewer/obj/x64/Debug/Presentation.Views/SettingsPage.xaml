<Page x:ConnectionId='1'
    x:Class="TsubameViewer.Presentation.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TsubameViewer.Presentation.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:uwpControls="using:Microsoft.Toolkit.Uwp.UI.Controls"
  xmlns:tt="using:TsubameViewer.Presentation.Views.TemplateSelector" 
  xmlns:wst="using:WindowsStateTriggers"
  xmlns:viewModel="using:TsubameViewer.Presentation.ViewModels"
  xmlns:i18Ext="using:I18NPortable.Xaml.Extensions"
  mc:Ignorable="d"
    Background="{ThemeResource ApplicationContentBackgroundBrush}">
  
  <Page.Resources>

    <x:Double x:Key="SettingItemWidth">400</x:Double>
    <x:Double x:Key="GroupSpacing">48</x:Double>
    <x:Double x:Key="ItemsSpacing">24</x:Double>

    <Style TargetType="ToggleSwitch" BasedOn="{StaticResource ToggleSwitchNoHeader}" />

    <tt:SettingsItemTemplateSelector x:Key="SettingItemTemplateSelector">
      <tt:SettingsItemTemplateSelector.ToggleSwitchSettingItem>
        <DataTemplate                                                         >
          <uwpControls:DockPanel x:ConnectionId='7' Width="{StaticResource SettingItemWidth}" Visibility="{Binding IsVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <ToggleSwitch x:ConnectionId='8'                                                   uwpControls:DockPanel.Dock="Right" Margin="0" Padding="0" />
            <TextBlock x:ConnectionId='9'                       VerticalAlignment="Center" TextWrapping="Wrap" MaxLines="3" />
          </uwpControls:DockPanel>
        </DataTemplate>
      </tt:SettingsItemTemplateSelector.ToggleSwitchSettingItem>

      <!-- アプリに記録されたフォルダ -->
      <tt:SettingsItemTemplateSelector.StoredFoldersSettingItem>
        <DataTemplate                                                         >
          <StackPanel x:ConnectionId='11' Width="{StaticResource SettingItemWidth}" Spacing="16">
            <ItemsControl x:ConnectionId='12'                                IsTabStop="False">
              <ItemsControl.ItemTemplate>
                <DataTemplate                                             >
                  <DropDownButton x:ConnectionId='19' HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Margin="0 0 0 6">
                    <uwpControls:DockPanel>
                      <SymbolIcon Symbol="Folder" uwpControls:DockPanel.Dock="Left" Margin="0 0 16 0" />
                      <StackPanel>
                        <TextBlock x:ConnectionId='20'                            />
                        <TextBlock x:ConnectionId='21'                      Opacity="0.7" FontSize="12" TextWrapping="Wrap" />
                      </StackPanel>
                    </uwpControls:DockPanel>

                    <DropDownButton.Flyout>
                      <MenuFlyout Placement="BottomEdgeAlignedRight">
                        <MenuFlyoutItem Text="{Binding Source=RemoveSourceFolderFromApp, Converter={StaticResource LocalizeConverter}}" Command="{Binding DeleteStoredFolderCommand}" />
                      </MenuFlyout>
                    </DropDownButton.Flyout>
                  </DropDownButton>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>

            
            <uwpControls:Expander>
              <uwpControls:Expander.Header>
                <TextBlock Text="{Binding Source=RecentlyUsedFiles, Converter={StaticResource LocalizeConverter}}" 
                       Style="{StaticResource SubtitleTextBlockStyle}"
                       />
              </uwpControls:Expander.Header>
              <uwpControls:Expander.Content>
                <ItemsControl x:ConnectionId='13'                                  IsTabStop="False">
                  <ItemsControl.ItemTemplate>
                    <DataTemplate                                             >
                      <DropDownButton x:ConnectionId='15' HorizontalAlignment="Stretch" HorizontalContentAlignment="Left" Margin="0 0 0 8">
                        <uwpControls:DockPanel>
                          <SymbolIcon Symbol="Folder" uwpControls:DockPanel.Dock="Left" Margin="0 0 16 0" />
                          <StackPanel>
                            <TextBlock x:ConnectionId='16'                            />
                            <TextBlock x:ConnectionId='17'                      Opacity="0.7" FontSize="12" TextWrapping="Wrap" />
                          </StackPanel>
                        </uwpControls:DockPanel>

                        <DropDownButton.Flyout>
                          <MenuFlyout Placement="BottomEdgeAlignedRight">
                            <MenuFlyoutItem Text="{Binding Source=RemoveSourceFolderFromApp, Converter={StaticResource LocalizeConverter}}" Command="{Binding DeleteStoredFolderCommand}" />
                          </MenuFlyout>
                        </DropDownButton.Flyout>
                      </DropDownButton>
                    </DataTemplate>
                  </ItemsControl.ItemTemplate>
                </ItemsControl>

              </uwpControls:Expander.Content>
            </uwpControls:Expander>
            
          </StackPanel>
        </DataTemplate>

      </tt:SettingsItemTemplateSelector.StoredFoldersSettingItem>

      <tt:SettingsItemTemplateSelector.UpdatableTextSettingItem>
        <DataTemplate                                                         >
          <Grid x:ConnectionId='23' Width="{StaticResource SettingItemWidth}"                                                                                      >
            <TextBlock x:ConnectionId='24'                       />
            <TextBlock x:ConnectionId='25'                                         HorizontalAlignment="Right" />
          </Grid>
          
        </DataTemplate>
      </tt:SettingsItemTemplateSelector.UpdatableTextSettingItem>

      <tt:SettingsItemTemplateSelector.ButtonSettingItem>
        <DataTemplate                                                  >
          <Button x:ConnectionId='27'                                                           MaxWidth="{StaticResource SettingItemWidth}"
                  HorizontalAlignment="Right"
                                                                                                       
                  />
        </DataTemplate>
      </tt:SettingsItemTemplateSelector.ButtonSettingItem>
      <tt:SettingsItemTemplateSelector.ThemeSelectSettingItem>
        <DataTemplate                                                       >
          <Grid x:ConnectionId='29'>
            <TextBlock x:ConnectionId='30'                       />
            <ComboBox x:ConnectionId='31'                                                                                           
                      HorizontalAlignment="Right"
                    >
              <ComboBox.ItemTemplate>
                <DataTemplate>
                  <TextBlock Text="{Binding Converter={StaticResource LocalizeConverter}}" />
                </DataTemplate>
              </ComboBox.ItemTemplate>
            </ComboBox>
          </Grid>
          
        </DataTemplate>
      </tt:SettingsItemTemplateSelector.ThemeSelectSettingItem>
      <tt:SettingsItemTemplateSelector.LocaleSelectSettingItem>
        <DataTemplate                                                        >
          <StackPanel x:ConnectionId='34' Spacing="8">
            <Grid>
              <TextBlock x:ConnectionId='36'                       />
              <ComboBox x:ConnectionId='37'                                                                                          
                      DisplayMemberPath="DisplayName"
                      SelectedValuePath="Locale"
                      HorizontalAlignment="Right"
                    >
              </ComboBox>
            </Grid>

            <Button x:ConnectionId='35'                                          
                                                                
                                                                                                                             
                    />
          </StackPanel>
        </DataTemplate>
      </tt:SettingsItemTemplateSelector.LocaleSelectSettingItem>
    </tt:SettingsItemTemplateSelector>


    <DataTemplate x:Key="SettingsGroupTemplate"                                              >
      <StackPanel x:ConnectionId='3' Spacing="16"                                                                                                   >
        <TextBlock x:ConnectionId='4'                        Style="{StaticResource SubtitleTextBlockStyle}" />
        <ItemsControl x:ConnectionId='5'                              
                      ItemTemplateSelector="{StaticResource SettingItemTemplateSelector}"
                      HorizontalAlignment="Stretch"                      
                      IsTabStop="False"
                        >
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <StackPanel Spacing="{StaticResource ItemsSpacing}" />
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
        </ItemsControl>
      </StackPanel>
    </DataTemplate>
    
  </Page.Resources>
  <Grid>
    <uwpControls:DockPanel>
      <Grid uwpControls:DockPanel.Dock="Top" Padding="32 16">
        <TextBlock Text="{Binding Source=SettingsPageTitle, Converter={StaticResource LocalizeConverter}}" Style="{StaticResource SubtitleTextBlockStyle}" 
                   IsTextSelectionEnabled="True"
                   >
          <TextBlock.ContextFlyout>
            <MenuFlyout>
              <MenuFlyoutSubItem Text="Debug">
                <ToggleMenuFlyoutItem x:ConnectionId='43' Text="Enable Xbox Appearnce"                                                                        />
              </MenuFlyoutSubItem>
            </MenuFlyout>
          </TextBlock.ContextFlyout>
        </TextBlock>

        <TextBlock x:ConnectionId='41'                                         IsTextSelectionEnabled="True" HorizontalAlignment="Right"
                   TextAlignment="Right"
                   Opacity="0.7"
                   FontSize="15"
                   >
          <TextBlock.ContextFlyout>
            <MenuFlyout>
              <MenuFlyoutItem x:ConnectionId='42' Text="{i18Ext:Localize Key=CopyToClipboard}"                                               />
            </MenuFlyout>
          </TextBlock.ContextFlyout>
        </TextBlock>
      </Grid>

      <ScrollViewer>
        <StackPanel x:ConnectionId='38' x:Name="ScrollViewerRootPanel">
          <ItemsControl x:ConnectionId='39'                                                      
                        ItemTemplate="{StaticResource SettingsGroupTemplate}"
                      Margin="32 16"
                        IsTabStop="False"
                        HorizontalAlignment="Left"
                        MaxWidth="520"
                      >
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <StackPanel Spacing="{StaticResource GroupSpacing}" />
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
          </ItemsControl>


          <StackPanel Spacing="16" HorizontalAlignment="Left" Margin="32 16 0 16">
            <HyperlinkButton Content="{Binding Source=PrivacyPolicy, Converter={StaticResource LocalizeConverter}}" 
                             NavigateUri="https://github.com/tor4kichi/TsubameViewer/wiki/Privacy-Policy" 
                             HorizontalContentAlignment="Right"
                             FontWeight="SemiBold"
                             Width="{StaticResource SettingItemWidth}"
                             />
            <HyperlinkButton Content="{Binding Source=ThirdPartyLibraryNotice, Converter={StaticResource LocalizeConverter}}" 
                             NavigateUri="https://github.com/tor4kichi/TsubameViewer/wiki/Third-Party-Library-Notice" 
                             HorizontalContentAlignment="Right"
                             FontWeight="SemiBold"
                             Width="{StaticResource SettingItemWidth}"
                             />

            <HyperlinkButton Content="{Binding Source=AskQuestionWithMashmarrow, Converter={StaticResource LocalizeConverter}}" 
                             NavigateUri="https://marshmallow-qa.com/tor4kichi" 
                             HorizontalContentAlignment="Right"
                             FontWeight="SemiBold"
                             Width="{StaticResource SettingItemWidth}"
                             />
          </StackPanel>
          

          <!-- AdvancedSetting -->
          <uwpControls:Expander Margin="32 64 32 32" Visibility="Collapsed">
            <uwpControls:Expander.Header>
              <TextBlock Text="{Binding Source=AdvancedSettings, Converter={StaticResource LocalizeConverter}}"
                     Style="{StaticResource SubtitleTextBlockStyle}"
                     />
            </uwpControls:Expander.Header>

            <ItemsControl x:ConnectionId='40'                                                              
                        ItemTemplate="{StaticResource SettingsGroupTemplate}"
                      Margin="32 16"
                          HorizontalAlignment="Left"
                          IsTabStop="False"
                      >
              <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                  <StackPanel Spacing="{StaticResource GroupSpacing}" />
                </ItemsPanelTemplate>
              </ItemsControl.ItemsPanel>
            </ItemsControl>
          </uwpControls:Expander>          
        </StackPanel>
        
        
      </ScrollViewer>
    </uwpControls:DockPanel>

    <VisualStateManager.VisualStateGroups>
      <!-- 画面サイズによる表示切り替え -->
      <VisualStateGroup>
        <VisualState>
          <VisualState.StateTriggers>
            <wst:DeviceFamilyStateTrigger DeviceFamily="Xbox" />
            <StateTrigger IsActive="{StaticResource DebugTVMode}" />
          </VisualState.StateTriggers>
          <VisualState.Setters>
            <Setter Target="ScrollViewerRootPanel.Padding" Value="80 0 80 27" />
          </VisualState.Setters>
        </VisualState>

        <VisualState>
          <VisualState.StateTriggers>
            <AdaptiveTrigger MinWindowWidth="1220" />
          </VisualState.StateTriggers>
          <VisualState.Setters>
          </VisualState.Setters>
        </VisualState>
        <VisualState>
          <VisualState.StateTriggers>
            <AdaptiveTrigger MinWindowWidth="610" />
          </VisualState.StateTriggers>
          <VisualState.Setters>
          </VisualState.Setters>
        </VisualState>
        <VisualState>
          <VisualState.StateTriggers>
            <AdaptiveTrigger MinWindowWidth="0" />
          </VisualState.StateTriggers>
          <VisualState.Setters>
          </VisualState.Setters>
        </VisualState>
      </VisualStateGroup>
    </VisualStateManager.VisualStateGroups>
  </Grid>
</Page>

